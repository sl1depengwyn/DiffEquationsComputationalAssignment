<Tab text="Solutions" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
     fx:controller="com.deca.diffequationscomputationalassignment.SolutionsTabController">
    <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <children>
                <BorderPane layoutX="150.0" layoutY="46.0" prefHeight="200.0" prefWidth="200.0"
                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
