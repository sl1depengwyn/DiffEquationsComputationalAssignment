                                      prefWidth="200.0" GridPane.rowIndex="2">
                                    <children>
                                        <Label focusTraversable="false" text="y">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                        <Label focusTraversable="false" text="0" translateY="5.0">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <AnchorPane GridPane.rowIndex="1">
                                    <children>
                                        <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                                               text="X" textAlignment="RIGHT" AnchorPane.bottomAnchor="0.0"
                                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                               AnchorPane.topAnchor="0.0">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <TextField fx:id="XTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                           onKeyTyped="#recalculate"/>
                                <TextField fx:id="y0TextField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                           onKeyTyped="#recalculate"/>
                                <AnchorPane layoutX="10.0" layoutY="59.0" GridPane.rowIndex="3">
                                    <children>
                                        <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                                               text="N" textAlignment="RIGHT" AnchorPane.bottomAnchor="0.0"
                                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                               AnchorPane.topAnchor="0.0">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <TextField fx:id="NTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                           onKeyTyped="#recalculate"/>
                            </children>
                        </GridPane>
                    </left>
                    <bottom>
                        <AnchorPane BorderPane.alignment="CENTER">
                            <children>
                                <Label fx:id="errorText" textFill="RED">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </AnchorPane>
                    </bottom>
                </BorderPane>
            </children>
        </AnchorPane>
    </content>
